#!/bin/bash

echo "üöÄ Setting up Quantum Networking System for Binder..."

# Create necessary directories
mkdir -p saved_topologies
mkdir -p simulation_logs

# Set up environment variables
export PYTHONPATH="${PYTHONPATH}:$(pwd)"
export DISABLE_EMBEDDING=1
export DISABLE_AI_FEATURES=1
export DISABLE_REDIS_LOGGING=1

# Build the React frontend
echo "üî® Building React frontend..."
cd ui
if [ -f "package.json" ]; then
    # Install Node.js dependencies
    npm install --silent
    
    # Build the frontend
    npm run build --silent
    
    echo "‚úÖ Frontend built successfully"
else
    echo "‚ö†Ô∏è No package.json found in ui directory"
fi

cd ..

echo "‚úÖ Setup complete - Quantum networking system ready!"

