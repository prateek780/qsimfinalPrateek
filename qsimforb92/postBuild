#!/bin/bash

# Binder post-build script
echo "ðŸ”§ Setting up Quantum Networking System..."

# Make scripts executable
chmod +x binder/start.sh

# Create necessary directories
mkdir -p saved_topologies
mkdir -p simulation_logs
mkdir -p ui/dist

# Install additional packages if needed
pip install --no-deps -r binder_requirements.txt

# Set up Jupyter extensions
jupyter contrib nbextension install --sys-prefix
jupyter nbextension enable --py widgetsnbextension --sys-prefix

echo " Quantum Networking System setup complete!"
echo " Ready to start the simulation!"
